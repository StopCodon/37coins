<div class="row">
    <div class="col-sm-12">
        <h2 class="form-signin-heading">{{s.merchant.verify.h2}}</h2>
        <form role="form">
        	<p>{{s.merchant.verify.desc}}</p>
            <div class="control-group">
            	<div class="form-group">
            		<label for="searchInput">{{s.merchant.verify.searchInput.label}}</label><br>
                	<input id="searchInput" type="tel" name="search" class="form-control" placeholder="{{s.merchant.verify.searchInput.placeholder}}" disabled>
                </div>
                <div class="form-group">
                	<label for="disabledInput">{{s.merchant.verify.searchInput.label}}</label>
                	<input class="form-control" id="disabledInput" type="text" placeholder="{{s.merchant.verify.searchInput.placeholder}}" disabled>
                </div>
            </div>
            <button class="btn btn-inverse" type="submit" disabled="disabled">Call me now</button>
        </form>
        <span id="merchStatus" class="bg-info">{{s.merchant.verify.searchInput.merchStatus1}}</span><br>
        
	</div>
</div>